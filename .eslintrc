{
    "extends": "airbnb",
    "rules": {
        "brace-style": [
            "error",
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": "off",
        "max-len": [
            "error",
            200
        ]
    },
    "globals": {
        "angular": true,
        "navigator": true
    }
}